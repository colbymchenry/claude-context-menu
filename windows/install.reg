Windows Registry Editor Version 5.00

; ============================================================
; "Open with Claude Code" + "Resume Chat with Claude"
; Windows Explorer Context Menu (CMD)
; ============================================================
; Double-click this file to install. No admin rights required.
;
; Adds two entries:
;   "Open with Claude Code"    — starts a new claude session
;   "Resume Chat with Claude"  — opens the interactive session picker
;
; Both appear on:
;   1. Right-click on a folder
;   2. Right-click on empty space inside a folder (background)
;
; Uses `claude` from PATH (default install location).
; If claude isn't in PATH, replace `claude` below with the full path, e.g.:
;   "C:\\Users\\YourName\\AppData\\Local\\Programs\\claude\\claude.exe"
;
; On Windows 11 these appear under "Show more options" (classic context menu).
; ============================================================

; --- "Open with Claude Code" — right-click on a folder ---
[HKEY_CURRENT_USER\Software\Classes\Directory\shell\ClaudeCode]
@="Open with Claude Code"
"Icon"="claude.exe"

[HKEY_CURRENT_USER\Software\Classes\Directory\shell\ClaudeCode\command]
@="cmd.exe /k \"cd /d \"%1\" && claude\""

; --- "Open with Claude Code" — right-click on empty space (background) ---
[HKEY_CURRENT_USER\Software\Classes\Directory\Background\shell\ClaudeCode]
@="Open with Claude Code"
"Icon"="claude.exe"

[HKEY_CURRENT_USER\Software\Classes\Directory\Background\shell\ClaudeCode\command]
@="cmd.exe /k \"cd /d \"%V\" && claude\""

; --- "Resume Chat with Claude" — right-click on a folder ---
[HKEY_CURRENT_USER\Software\Classes\Directory\shell\ClaudeCodeResume]
@="Resume Chat with Claude"
"Icon"="claude.exe"

[HKEY_CURRENT_USER\Software\Classes\Directory\shell\ClaudeCodeResume\command]
@="cmd.exe /k \"cd /d \"%1\" && claude --resume\""

; --- "Resume Chat with Claude" — right-click on empty space (background) ---
[HKEY_CURRENT_USER\Software\Classes\Directory\Background\shell\ClaudeCodeResume]
@="Resume Chat with Claude"
"Icon"="claude.exe"

[HKEY_CURRENT_USER\Software\Classes\Directory\Background\shell\ClaudeCodeResume\command]
@="cmd.exe /k \"cd /d \"%V\" && claude --resume\""
